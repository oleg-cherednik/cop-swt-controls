<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="plugin.cop.swt.example.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="plugin.cop.swt.example.perspectives.Perspective"
            id="cop.swt.example.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="plugin.cop.swt.example.views.View"
            id="cop.swt.example.view">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="cop.swt.example.application"
            name="Test application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="plugin.cop.swt.example.commands.ExitHandler"
            id="plugin.commands"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="cop.swt.preferences.GeneralPreferencePage"
            id="cop.swt.preferences.GeneralPreferencePage"
            name="General">
      </page>
      <page
            class="cop.swt.preferences.EmployeePreferencePage"
            id="cop.swt.preferences.EmployeePreferencePage"
            name="Employees">
      </page>
      <page
            category="cop.swt.preferences.GeneralPreferencePage"
            class="cop.swt.preferences.GgeneralTablePreferencePage"
            id="cop.swt.preferences.GgeneralTablePreferencePage"
            name="Tables">
      </page>
      <page
            category="cop.swt.preferences.EmployeePreferencePage"
            class="cop.swt.preferences.EmployeeListPreferencePage"
            id="cop.swt.preferences.EmployeeListPreferencePage"
            name="EmployeeList">
      </page>
      <page
            class="cop.swt.preferences.LocalizationPreferencePage"
            id="cop.swt.preferences.LocalizationPreferencePage"
            name="Localization">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="plugin.commands"
                  label="Exit"
                  style="push"
                  tooltip="Exit the application">
            </command>
         </menu>
         <menu
               id="settingsMenu"
               label="Settings">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
